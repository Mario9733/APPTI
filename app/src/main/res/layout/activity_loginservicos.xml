<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/iconti"
        android:layout_width="180dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@mipmap/tift" />

    <EditText
        android:id="@+id/etcllr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconti"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="Número de telefone (com DDD)"
        android:textColor="#FFFFFF"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btnSendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar código"
        android:layout_below="@id/etcllr"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:onClick="enviarCodigoVerificacao" />

    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSendCode"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginEnd="30dp"
        android:hint="Código de verificação"
        android:inputType="number"
        android:minWidth="10dp"
        android:minHeight="48dp"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/btnVerifyCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verificar código"
        android:layout_below="@id/etVerificationCode"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:onClick="verificarCodigo" />


</RelativeLayout>